{
  "name": "umeko_be",
  "version": "0.0.1",
  "description": "Umeko Backend - A NestJS Microservices Project",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:user": "ts-node -r tsconfig-paths/register src/apps/user-service/main.ts",
    "start:dev:user": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/apps/user-service/main.ts",
    "migration:generate:user": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/apps/user-service/dataSource.ts src/apps/user-service/migrations/InitSchema",
    "migration:run:user": "typeorm migration:run -d dist/apps/user-service/dataSource.js",
    "start:dev:vocab": "ts-node-dev --respawn -r tsconfig-paths/register src/apps/vocab-service/main.ts",
    "start:vocab": "ts-node -r tsconfig-paths/register src/apps/vocab-service/main.ts",
    "migration:generate:vocab": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/apps/vocab-service/dataSource.ts src/apps/vocab-service/migrations/InitSchema",
    "migration:run:vocab": "typeorm migration:run -d dist/apps/vocab-service/dataSource.js",
    "seed:categories": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed-categories.ts",
    "seed:lessons": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed-lessons.ts",
    "seed:lessonsMimikara": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed-lessonMimikara.ts",
    "seed:lessonsMimikaraN2": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed-lessonMimikaraN2.ts",
    "seed:kanji": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed-kanji.ts",
    "seed:vocab": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed-vocabs.ts",
    "seed:vocabMimikaraN3": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed_vocabMimikaraN3.ts",
    "seed:vocabMimikaraN2": "ts-node -r tsconfig-paths/register src/apps/vocab-service/seeds/seed-vocabMimikaraN2.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/typeorm.config.ts",
    "seed": "ts-node ./src/database/seeds/seed.ts"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dayjs": "^1.11.13",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.0",
    "mongoose": "^8.2.0",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}